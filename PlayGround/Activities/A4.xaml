<Page
    x:Class="PlayGround.Activities.A4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlayGround.Activities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="Back">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/TestPics/Idea 28.png"/>
        </Grid.Background>
        <Grid x:Name="theGrid" VerticalAlignment="Bottom" HorizontalAlignment="Center"
              Width="300" Height="300"></Grid>
        <Slider x:Name="BlurAmount" ValueChanged="BlurAmount_ValueChanged" Maximum="100" Minimum="0" Value="0"/>
        <Button x:Name="BlurTheImage" Content="Blur" VerticalAlignment="Center" HorizontalAlignment="Right"
                Foreground="Yellow" Background="Orange" Click="BlurTheImage_Click" CenterPoint="0,0,0"
                PointerEntered="BlurTheImage_PointerEntered" PointerExited="BlurTheImage_PointerExited"/>
        <Button x:Name="ToA5" Content="ToA5" VerticalAlignment="Center" HorizontalAlignment="Left"
                Foreground="Yellow" Background="Orange" Click="ToA5_Click"/>

    </Grid>
</Page>
